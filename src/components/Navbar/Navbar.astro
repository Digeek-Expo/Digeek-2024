---
import NavbarSection from "./NavbarSection.astro";
import NavbarMobil from "./NavbarMobil";
---

<div class="w-full bg-[#7678FF] h-[100px] fixed top-0 flex z-10">
  <div
    class="flex w-4/5 py-1 max-w-[1920px] mx-auto justify-between items-center text-white"
  >
    <a href="/">
      <img class="max-w-[250px]" src="/LogoDigeek.png" />
    </a>
    <div class="hidden lg:flex w-1/2 justify-around uppercase font-bold">
      <NavbarSection title="inicio" />
      <NavbarSection title="webinars" />
      <NavbarSection title="FAQ" />
      <a
        href="/registro"
        class="px-6 py-1 group flex items-center justify-center bg-[#FF42BA] hover:bg-[#eb60b8] relative before:border-r-[1rem] before:border-r-[#FF42BA] before:border-t-[1rem] hover:before:border-r-[#eb60b8] before:border-t-transparent before:border-b-[1rem] before:border-b-transparent before:w-0 before:h-0 before:bg-transparent before:absolute before:left-[-1rem] after:border-l-[1rem] after:border-l-[#FF42BA] hover:after:border-l-[#eb60b8] after:border-t-[1rem] after:border-t-transparent after:border-b-[1rem] after:border-b-transparent after:w-0 after:h-0 after:bg-transparent after:absolute after:right-[-1rem] duration-100"
        >Registro</a
      >
    </div>
  </div>
  <NavbarMobil client:only />
</div>
