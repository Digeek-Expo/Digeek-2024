---
import Layout from "../layouts/Layout.astro";
import Event from "../components/webinars/Event.astro";
import Day from "../components/webinars/Day.astro";
---

<Layout title="Digeek 2024">
  <main class="w-auto h-auto bg-[#121212] pb-[50vh] pt-[100px] z-0">
    <div
      class="flex flex-col items-center justify-center z-0 md:max-lg:flex-row md:max-lg:ml-20 md:max-lg:items-start lg:ml-40 xl:ml-40 lg:items-start xl:flex-row xl:space-x-2 lg:justify-start"
    >
      <Day name="Marzo 14">
        <Event
          name="Registro"
          time="8:00 AM - 9:00 AM"
          description="Registro en el gimnasio de CETYS"
          isOdd={false}
        />
        <Event
          name="Por definir"
          time="9:00 AM - 10:00 AM"
          description="Por definir"
          isOdd={true}
        />
        <Event
          name="Nuevas tecnologias AI"
          time="10:00 AM - 11:00 AM"
          description="Samsung STR. Por Miguel Gonzalez. ISW | IDGD"
          isOdd={false}
        />
        <Event
          name="Algoritmos, importancia, consejos y técnicas para resolverlos"
          time="11:00 AM - 12:00 PM"
          description="Samsung STR. Por Rafael Corona. ISW"
          isOdd={true}
        />
        <Event
          name="Interview, tips and hacks"
          time="12:00 PM - 1:00 PM"
          description="Samsung STR. Por Iván Martinez. ISW | IDGD"
          isOdd={false}
        />
        <Event
          name="Departamento de Diseño"
          time="1:00 PM - 2:00 PM"
          description="Samsung STR. Por Luis Pardo. IDGD"
          isOdd={true}
        />
        <Event
          name="Representantes STR"
          time="2:00 PM - 3:00 PM"
          description="Samsung STR. Por Jonathan corona. ISW | IDGD"
          isOdd={false}
        />
        <Event
          name="Comida"
          time="3:00 PM - 4:00 PM"
          description="Comida"
          isOdd={true}
        />
        <Event
          name="Taller fotografia"
          time="4:00 PM - 5:00 PM"
          description="Por Diego Covarrubias"
          isOdd={false}
        />
        <Event
          name="Taller UI/UX Design thinking"
          time="5:00 PM - 6:00 PM"
          description="Por Roberto Calderon. IDGD"
          isOdd={true}
        />
        <Event
          name="Taller Gear Parte 1"
          time="5:00 PM - 6:00 PM"
          description="ISW"
          isOdd={false}
        />
      </Day>

      <Day name="Marzo 15">
        <Event
          name="Registro"
          time="8:00 AM - 9:00 AM"
          description="Registro en el gimnasio de CETYS"
          isOdd={false}
        />
        <Event
          name="Por definir"
          time="9:00 AM - 10:00 AM"
          description="Por definir"
          isOdd={true}
        />
        <Event
          name="QA en la industria del software"
          time="10:00 AM - 11:00 AM"
          description="Conferencia por Dilato. ISW"
          isOdd={false}
        />
        <Event
          name="Accenture - One of the best places to work"
          time="11:00 AM - 12:00 PM"
          description="Accenture"
          isOdd={true}
        />
        <Event
          name="Oportunidaes para desarrolladores en Web3"
          time="12:00 PM - 1:00 PM"
          description="Conferencia por Vara Network. ISW"
          isOdd={false}
        />
        <Event
          name="Nadia"
          time="1:00 PM - 2:00 PM"
          description="Evento por definir."
          isOdd={true}
        />
        <Event
          name="Monste"
          time="2:00 PM - 3:00 PM"
          description="Evento por definir."
          isOdd={false}
        />
        <Event
          name="Comida"
          time="3:00 PM - 4:00 PM"
